@{ ViewData["Title"] = "Tình trạng thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="cart_area section--padding2 bgcolor">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product_archive added_to__cart" style="text-align:center">
                    @if (Model == 0)
                    {
                        <h2><strong>Thanh toán thành công !!!</strong></h2>
                    }
                    else
                    {
                        <h2><strong>Thanh toán thất bại. Vui lòng thanh toán lại !!!</strong></h2>
                    }
                </div>
            </div>
        </div>
    </div>
</section>