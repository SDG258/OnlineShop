@model OnlineShop.Models.User
@{
    ViewData["Title"] = "Trang đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="login_area section--padding2">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <form action="~/Users/Login" method="post">
                    <div class="cardify login">
                        <div class="login--header">
                            <h3>Xin chào</h3>
                            <p>Bạn có thể đăng nhập bằng tên người dùng của mình</p>
                        </div>

                        <div class="login--form">
                            <div class="form-group">
                                <label for="user_name">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input id="user_name" type="text" class="text_field" name="Email" placeholder="Email">
                            </div>

                            <div class="form-group">
                                <label for="pass">Mật khẩu</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input id="pass" type="password" class="text_field" name="Password" placeholder="Mật khẩu của bạn">
                            </div>

                            <button class="btn btn--md btn--round" type="submit">Đăng nhập</button>

                            <div class="login_assist">
                                <p class="recover">Bạn quên <a href="~/Users/ForgotPassword">mật khẩu</a>?
                                </p> Không có tài khoản<a href="~/Users/Register"> tạo tài khoản</a>?
                                </p>
                            </div>
                        </div>
                        <!-- end .login--form -->
                    </div>
                    <!-- end .cardify -->
                </form>
            </div>
            <!-- end .col-md-6 -->
        </div>
        <!-- end .row -->
    </div>
    <!-- end .container -->
</section>
