@model OnlineShop.Models.User
@{
    ViewData["Title"] = "Xác nhận địa chỉ nhận hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="dashboard-area">
    <div class="dashboard_menu_area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="dashboard_menu">
                        <li>
                            <a href="dashboard.html">
                                <span class="lnr lnr-home"></span>Dashboard
                            </a>
                        </li>
                        <li>
                            <a href="dashboard-setting.html">
                                <span class="lnr lnr-cog"></span>Setting
                            </a>
                        </li>
                        <li>
                            <a href="dashboard-purchase.html">
                                <span class="lnr lnr-cart"></span>Purchase
                            </a>
                        </li>
                        <li class="active">
                            <a href="dashboard-add-credit.html">
                                <span class="lnr lnr-dice"></span>Add Credits
                            </a>
                        </li>
                        <li>
                            <a href="dashboard-statement.html">
                                <span class="lnr lnr-chart-bars"></span>Statements
                            </a>
                        </li>
                        <li>
                            <a href="dashboard-upload.html">
                                <span class="lnr lnr-upload"></span>Upload Items
                            </a>
                        </li>
                        <li>
                            <a href="dashboard-manage-item.html">
                                <span class="lnr lnr-briefcase"></span>Manage Items
                            </a>
                        </li>
                        <li>
                            <a href="dashboard-withdrawal.html">
                                <span class="lnr lnr-briefcase"></span>Withdrawals
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="dashboard_contents">
        <div class="container">


            <form asp-controller="User" method="post" name="add_credit_form">
                <div class="row">

                </div>

                <div class="credit_modules">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="modules__title">
                                <h3>Kiểm tra địa chỉ nhận hàng</h3>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="payment_info modules__content">
                                <div class="form-group">
                                    <label for="card_number">Số nhà, Tên đường</label>
                                    <input id="card_number" type="text" class="text_field" name="Address" value="@Html.DisplayFor(model => model.Address)" placeholder="Nhập địa chỉ ở đây">
                                </div>
                                <div class="form-group">
                                    <label for="card_number">Xã/Phường</label>
                                    <input id="card_number" type="text" class="text_field" name="Ward" value="@Html.DisplayFor(model => model.Ward)" placeholder="Nhập xã/ phường ở đây">
                                </div>
                                <div class="form-group">
                                    <label for="card_number">Quận/Huyện</label>
                                    <input id="card_number" type="text" class="text_field" name="District" value="@Html.DisplayFor(model => model.District)" placeholder="Nhập quận/huyện chỉ ở đây">
                                </div>
                                <div class="form-group">
                                    <label for="card_number">Tỉnh/Thành Phố</label>
                                    <input id="card_number" type="text" class="text_field" name="City" value="@Html.DisplayFor(model => model.City)" placeholder="Nhập tỉnh/Tp chỉ ở đây">
                                </div>
                                <button type="submit" class="btn btn--round btn--default" formaction="EditAddress">Cập nhật địa chỉ</button>
                                <button style="float: right;" type="submit" class="btn btn--round btn--default" formaction="Confirm">Xác nhận đơn hàng</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>