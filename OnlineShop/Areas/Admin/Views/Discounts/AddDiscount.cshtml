@model IEnumerable<OnlineShop.Models.Discount>

@{ ViewData["Title"] = "Thêm mã giảm giá";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="dashboard_contents">
    <div class="container">
        <form action="@Url.Action("AddDiscount", "Discounts", new { area = "Admin" })" method="post">
            <div class="credit_modules">
                <div class="row">
                    <div class="col-md-12">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="payment_info modules__content">
                            <div class="form-group">
                                <label for="card_number">Mã giảm giá</label>
                                <input name="DiscountCode" id="card_number" type="text" class="text_field" placeholder="Vui lòng nhập mã giảm giá...">
                            </div>
                            <div class="form-group">
                                <label for="card_number">Phần trăm giảm giá</label>
                                <input name="DiscountPercent" id="card_number" type="number" class="text_field" placeholder="Vui lòng nhập phần trăm giảm giá...">
                            </div>
                            <div class="form-group">
                                <label for="card_number">Số lượng</label>
                                <input name="AmountOf" id="card_number" type="number" class="text_field" placeholder="Vui lòng nhập phần trăm giảm giá...">
                            </div>
                            <div class="right__inputWrapper">
                                <label for="code">Ngày bắt đầu</label>
                                <input type="datetime-local" name="StartDate">
                            </div>
                            <div class="right__inputWrapper">
                                <label for="code">Ngày kết thúc</label>
                                <input type="datetime-local" name="EndDate">
                            </div>
                            <div class="form-group">
                                <label for="authbio">Mô tả</label>
                                <textarea name="note" id="authbio" class="text_field" placeholder="Một vài mô tả ngắn gọn về sản phẩm..."></textarea>
                            </div>
                            <label for="name">Các mã đã có</label>
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <div class="select-wrap select-wrap2">
                                            <select name="" id="name">
                                                <option>Nhấp vào để xem</option>
                                                @foreach (var item in Model)
                                                {
                                                    <option>@item.DiscountPercent - @item.DiscountCode</option>
                                                }
                                            </select>
                                            <span class="lnr lnr-chevron-down"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">

                                    <button type="submit" class="btn btn--round btn--default">Thêm</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>